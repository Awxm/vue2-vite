{
	"name": "follow-up",
	"version": "1.0.0",
	"description": "中山五院随访",
	"author": "aidi",
	"scripts": {
		"dev": "vite",
		"build:prod": "vite build",
		"build:stage": "vite build --mode staging",
		"preview": "node build/index.js --preview",
		"prepare": "husky install",
		"lint": "eslint src/**/*.{js,vue} --fix",
		"lint:fix": "eslint --ext .vue,.js,jsx, ./ --max-warnings 0 --fix",
		"lint:stylelint": "stylelint src/**/*.{vue,css,scss} --fix",
		"lint:ls-lint": "ls-lint",
		"format": "prettier --write",
		"commit": "git add . && cz-customizable",
		"test:ci": "npm run lint && npm run test:unit"
	},
	"dependencies": {
		"@tinymce/tinymce-vue": "2.0.0",
		"axios": "0.18.1",
		"element-ui": "2.15.12",
		"lodash": "4.17.21",
		"normalize.css": "7.0.0",
		"nprogress": "0.2.0",
		"path-browserify": "1.0.1",
		"path-to-regexp": "2.4.0",
		"tinymce": "^5.0.3",
		"vue": "2.6.10",
		"vue-dompurify-html": "2.6.0",
		"vue-router": "3.0.6",
		"vuex": "3.1.0",
		"vuex-persistedstate": "^4.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@ls-lint/ls-lint": "2.0.1",
		"commitlint-config-cz": "^0.13.3",
		"commitlint-config-git-commit-emoji": "^1.0.0",
		"cz-customizable": "^7.0.0",
		"eslint-config-musui-vue2": "1.0.3",
		"husky": "^7.0.4",
		"lint-staged": "^9.0.2",
		"prettier": "1.18.2",
		"sass": "1.26.8",
		"stylelint": "13.13.1",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-declaration-block-no-ignored-properties": "^2.5.0",
		"stylelint-scss": "^4.2.0",
		"vite": "4.3.9",
		"vite-plugin-html": "3.2.0",
		"vite-plugin-theme": "0.8.6",
		"vite-plugin-vue2": "2.0.3",
		"vite-plugin-vue2-svg": "0.4.0",
		"vue-template-compiler": "2.6.10"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"engines": {
		"node": ">=8.9",
		"npm": ">= 3.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"src/**/*.{js,vue}": [
			"prettier --write",
			"npm run lint",
			"git add ."
		],
		"src/**/*.{css,scss,vue}": [
			"npm run lint:stylelint",
			"git add ."
		]
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	},
	"license": "MIT",
	"template": "vue2-vite"
}